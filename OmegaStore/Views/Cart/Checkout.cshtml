@{
    ViewData["Title"] = "Thanh toán";
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap mb-3">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active">Thanh toán</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Start -->
<div class="checkout pt-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="checkout-inner">
                    <div class="billing-address">
                        <h2>Thông tin thanh toán</h2>
                        <p class="text-center">Bạn đã có tài khoản? <a asp-controller="Account" asp-action="Login">Nhấn vào đây để đăng nhập</a></p>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Họ và tên<span class="text-danger">*</span></label>
                                <input class="form-control" name="fullname" type="text" placeholder="Họ tên">
                            </div>
                            <div class="col-md-12">
                                <label>Địa chỉ email</label>
                                <input class="form-control" name="email" type="text" placeholder="email">
                            </div>
                            <div class="col-md-12">
                                <label>Số điện thoại<span class="text-danger">*</span></label>
                                <input class="form-control" name="phone" type="text" placeholder="Số điện thoại">
                            </div>
                            <div class="col-md-12">
                                <label>Địa chỉ<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" placeholder="Address">
                            </div>
                            <div class="col-md-12">
                                <label>Ghi chú cho đơn hàng</label>
                                <textarea class="form-control" type="text" rows="6"></textarea>
                            </div>
                            <div class="col-md-12">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="shipto">
                                    <label class="custom-control-label" for="shipto">Ship to different address</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="shipping-address">
                        <h2>Shipping Address</h2>
                        <div class="row">
                            <div class="col-md-12">
                                <label>Họ và tên<span class="text-danger">*</span></label>
                                <input class="form-control" name="fullname" type="text" placeholder="Họ tên">
                            </div>
                            <div class="col-md-12">
                                <label>Địa chỉ email</label>
                                <input class="form-control" name="email" type="text" placeholder="email">
                            </div>
                            <div class="col-md-12">
                                <label>Số điện thoại<span class="text-danger">*</span></label>
                                <input class="form-control" name="phone" type="text" placeholder="Số điện thoại">
                            </div>
                            <div class="col-md-12">
                                <label>Địa chỉ<span class="text-danger">*</span></label>
                                <input class="form-control" type="text" placeholder="Address">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="checkout-inner">
                    <div class="checkout-summary">
                        <h1>Thông tin đơn hàng</h1>
                        <table class="table table-light">
                            <thead class="thead-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Tạm tính</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        Mô hình lắp ráp Pokemon Collection Quick 20 Fuecoco  <span class="font-weight-bold">× 1</span>
                                    </td>
                                    <td>100.000đ</td>
                                </tr>
                                <tr>
                                    <td>
                                        Mô hình lắp ráp Luffy Gear 5 <span class="font-weight-bold">× 1</span>
                                    </td>
                                    <td>100.000đ</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="sub-total">Thành tiền<span>200.000đ</span></p>
                        <p class="ship-cost">Giao hàng<span>25.000đ</span></p>
                        <h2>Tổng tiền<span>225.000đ</span></h2>
                    </div>

                    <div class="checkout-payment">
                        <div class="payment-methods">
                            <h1>Phương thức thanh toán</h1>
                            <div class="payment-method">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="payment-1" name="payment">
                                    <label class="custom-control-label" for="payment-1">Thanh toán khi nhận hàng (COD)</label>
                                </div>
                            </div>
                            <div class="payment-method">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="payment-2" name="payment">
                                    <label class="custom-control-label" for="payment-2">Thanh toán bằng VNPay</label>
                                </div>
                            </div>
                        </div>
                        <div class="checkout-btn">
                            <button>Đặt hàng</button>
                        </div>
                        <div class="store-commitments mt-3">
                            <p>* Sản phẩm có lỗi do nhà sản xuất có thể được đổi trả trong vòng 10 ngày</p>
                            <p>** Thời gian giao hàng từ 1-3 ngày với nội thành TP.HCM và 2-5 ngày với khu vực khác</p>
                            <p>*** Khách hàng ở nội thành TP.HCM cần giao hàng gấp vui lòng liên hệ HOTLINE: 1900 1000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->