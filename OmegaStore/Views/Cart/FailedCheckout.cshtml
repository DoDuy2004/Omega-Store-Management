                <h3 class="font-weight-bold mt-4">Đặt hàng không thành công</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-center mb-5">
                <a asp-controller="" asp-action="" class="btn btn-success mr-3">Về trang chủ</a>
                @* <a asp-controller="" asp-action="" class="btn btn-primary">Xem chi tiết đơn hàng này</a> *@
            </div>
        </div>
    </div>
</div>