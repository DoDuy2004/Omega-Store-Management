@{
    ViewData["Title"] = "Thông báo đặt hàng";
}

@section Styles {
    <style>
        i.fa-times-circle {
            font-size: 70px;
            color: red;
        }

        .wrapper-order {
            margin: 0 auto;
            width: 600px;
            border-top: 8px solid red;
            background: #fff;
            padding: 60px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="wrapper-order text-center mb-3">
