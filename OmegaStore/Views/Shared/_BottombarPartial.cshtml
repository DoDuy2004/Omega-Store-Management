<div class="bottom-bar">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-md-2">
				<div class="logo">
					<a asp-controller="Home" asp-action="Index" class="d-inline-block">
						<img src="~/img/logo.png" alt="Logo" width="100" class="img-fluid">
					</a>
				</div>
			</div>
			<div class="col-md-7">
				<div class="search">
					<form asp-controller="Product" asp-action="Search" method="get">
						<input type="text" name="keyword" placeholder="Bạn đang tìm gì... "
							   autocomplete="off">
						<button type="submit"><i class="fa fa-search"></i></button>
					</form>
				</div>
			</div>
			@await Component.InvokeAsync("CartSummary")
		</div>
	</div>
</div>

