@model IEnumerable<OmegaStore.Models.Blog>

@{
    ViewData["Title"] = "Danh sách bài viết";
    var recentBlogs = ViewBag.recentBlogs as List<Blog> ?? new List<Blog>();
}

<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active">Bài viết</li>
        </ul>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Post list Start -->
<div class="post-list">
    <div class="container">
        <form action="#">
            <input type="text"
                   class="form-control w-50 m-auto"
                   placeholder="Nhập từ khóa liên quan để tìm bài viết" />
            <button><i class="fas fa-search"></i></button>
        </form>
        <div class="row mt-3">
            <div class="col-lg-9">
                <h5 class="mb-3 font-weight-bold">Bài viết</h5>
                <div class="row">
                    @foreach (var b in Model)
                    {
                        <div class="col-md-4">
                            <div class="card-img">
                                <a asp-controller="Post" asp-action="Detail">
                                    <img class="d-block w-100" src="~/img/blogs/@b.Thumbnail" alt="" />
                                </a>
                            </div>
                            <div class="card-content p-2">
                                <p class="title text-capitalize font-weight-bold mb-2">
                                    <a asp-controller="Post" asp-action="Detail">@b.Title</a>
                                </p>
                                <p class="entry-content mb-2">
                                    @b.ShortContent
                                </p>
                                <div class="card-meta d-flex justify-content-between">
                                    <p class="author">bởi: @b.Author</p>
                                    <p class="date">@b.CreatedAt</p>
                                </div>
                            </div>
                        </div>
                    }
                    
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-4 py-3">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" asp-controller="" asp-action="" tabindex="-1">Trước</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" asp-controller="" asp-action="">1</a>
                                </li>
                                <li class="page-item"><a class="page-link" asp-controller="" asp-action="">2</a></li>
                                <li class="page-item"><a class="page-link" asp-controller="" asp-action="">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" asp-controller="" asp-action="">Sau</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 right pl-4">
                <h6 class="font-weight-bold">Bài viết gần đây</h6>
                <div class="row list-blogs">
                    @for (int i = 0; i < recentBlogs.Count; i++)
                    {
                        <div class="col-md-12 item mb-3 d-flex justify-content-between">
                            <div class="item-img w-50">
                                <a asp-controller="Post" asp-action="Detail" class="position-relative">
                                    <img class="d-block w-100" src="~/img/blogs/@recentBlogs[i].Thumbnail" alt="" />
                                    <div class="num bg-warning position-absolute d-flex justify-content-center align-items-center">
                                        <span class="d-block">@(i + 1)</span>
                                    </div>
                                </a>
                            </div>
                            <div class="item-content w-50">
                                <p class="title text-capitalize mb-2">
                                    <a asp-controller="Post" asp-action="Detail">@recentBlogs[i].Title</a>
                                </p>
                                <p>Tin tức - <span class="text-primary">@recentBlogs[i].CreatedAt</span></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Post list End -->