@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = "_LoginLayout";
}

@section Styles {
    
}

@section Scripts {
    
}
<div>
    <h4>@if (TempData["ErrorMessage"] != null)
        {
            @TempData["ErrorMessage"];
        }
    </h4>
</div>
<div>
    <h3>Đăng nhập</h3>
</div>
<form class="form-login flex flex-column gap24" asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
    <fieldset class="email">
        <div class="body-title mb-10">Tên tài khoản<span class="tf-color-1">*</span></div>
        <input class="flex-grow" type="text" placeholder="Vui lòng nhập username hoặc email" name="username" tabindex="0" aria-required="true" required="">
    </fieldset>
    <fieldset class="password">
        <div class="body-title mb-10">Mật khẩu<span class="tf-color-1">*</span></div>
        <input class="password-input" type="password" placeholder="Vui lòng nhập mật khẩu" name="password" tabindex="0"  aria-required="true" required="">
        <span class="show-pass">
            <i class="icon-eye view"></i>
            <i class="icon-eye-off hide"></i>
        </span>
    </fieldset>
    <div class="flex justify-between items-center">
        <div class="flex gap10">
            <input class="" type="checkbox" id="signed">
            <label class="body-text" for="signed">Ghi nhớ đăng nhập</label>
        </div>
        <a href="forgot-password.html" class="body-text tf-color">Quên mật khẩu?</a>
    </div>
    <button class="tf-button w-full">Đăng nhập</button>
</form>