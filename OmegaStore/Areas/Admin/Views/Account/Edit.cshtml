    <script src="~/admin/js/zoom.js"></script>
    <script src="~/admin/js/switcher.js"></script>
    <script src="~/admin/js/theme-settings.js"></script>
}

<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Sửa thông tin tài khoản</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html"><div class="text-tiny">Tổng quan</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#"><div class="text-tiny">Tài khoản</div></a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Sửa thông tin tài khoản</div>
                    </li>
                </ul>
            </div>
            <!-- add-new-user -->
            <div class="bot mb-24" style="display: flex; flex-direction: row-reverse;">
                <a href="accounts.html" class="tf-button w180 fs-5 " style="width: 200px; background-color: #1dd1a1;">
                    <i class="icon-arrow-left fw-bold fs-4" style="background-color: #fff; color: #1dd1a1; border-radius: 50%;"></i>
                    Quay lại danh sách
                </a>
            </div>
            <form class="form-add-new-user form-style-2">
                <div class="wg-box">
                    <div class="left flex-grow">
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Họ tên</div>
                            <input class="flex-grow" type="text" placeholder="Nhập họ tên" value="Nguyễn Văn A" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Ngày sinh</div>
                            <input class="flex-grow" type="date" value="01/01/2004" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Tên đăng nhập</div>
                            <input class="flex-grow" type="text" placeholder="Nhập tên đăng nhập" value="username012@@" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Số điện thoại</div>
                            <input class="flex-grow" type="text" placeholder="Nhập số điện thoại" value="0909455678" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>
                    </div>
                    <div class="right flex-grow">
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Địa chỉ</div>
                            <input class="flex-grow" type="text" placeholder="Nhập địa chỉ" value="12/345 Nguyễn Thị Minh Khai, P.Đa Kao, Q.1, TP Hồ Chí Minh" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>   
                        <fieldset class="mb-24">
                            <div class="body-title mb-10">Giới tính</div>
                            <div class="select">
                                <select class="">
                                    <option>--Chọn giới tính--</option>
                                    <option>Nam</option>
                                    <option>Nữ</option>
                                    <option>Khác</option>
                                </select>
                            </div>
                        </fieldset>
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Email</div>
                            <input class="flex-grow" type="email" placeholder="Nhập email" value="vanadeptrai123@gmail.com" name="name" tabindex="0" aria-required="true" required="">
                        </fieldset>   
                        <fieldset class="name mb-24">
                            <div class="body-title mb-10">Vai trò</div>
                            <div class="select">
                                <select class="">
                                    <option>--Chọn vai trò--</option>
                                    <option>Bán hàng</option>
                                    <option>Thủ kho</option>
                                    <option>Admin</option>
                                    <option>Super Adminvb </option>
                                </select>
                            </div>
                        </fieldset>
                    </div>
                </div>             
                <div class="flex justify-center">
                    <button class="tf-button w180 fs-5 " style="width: 200px; background-color: #1dd1a1;" type="submit">Lưu thay đổi</button>
                </div>                       
            </form>
            <!-- /add-new-user -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->
