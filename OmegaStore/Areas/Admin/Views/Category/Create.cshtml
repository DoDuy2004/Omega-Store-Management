@{
    ViewData["Title"] = "Tạo Danh Mục";
}

@section Styles {
    <link rel="stylesheet" href="~/admin/css/All.css">
}

@section Scripts {
    <script src="~/admin/js/zoom.js"></script>
    <script src="~/admin/js/switcher.js"></script>
    <script src="~/admin/js/theme-settings.js"></script>
}

<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Thêm danh mục mới</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html">
                            <div class="text-tiny">Quản lý</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#">
                            <div class="text-tiny">Danh mục</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Thêm danh mục</div>
                    </li>
                </ul>
            </div>
            <!-- new-category -->
            <div class="wg-box col-lg-12">
                <form class="col-md-12">
                    <div class="row mb-10">
                        <div class="col-md-6">
                            <label for="exampleInputEmail1"
                                   class="mb-10 fs-5 fw-bold">Danh mục cha</label>
                            <select name="parent-category" id="parent-category">
                                <option value="">--Chọn danh mục--</option>
                                <option value="">Đồ gỗ 3D</option>
                                <option value="">Mô hình annime</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1"
                                   class="mb-10 fs-5 fw-bold">Tên danh mục</label>
                            <input type="email"
                                   class="form-control mb-10"
                                   id="exampleInputEmail1"
                                   aria-describedby="emailHelp"
                                   value="Duy Dep Trai"
                                   placeholder="" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputEmail1"
                                   class="mb-10 fs-5 fw-bold">Slug</label>
                            <input style="background-color: #d9d9d9"
                                   type="email"
                                   class="form-control mb-10 text-dark"
                                   id="exampleInputEmail1"
                                   aria-describedby="emailHelp"
                                   placeholder="Slug"
                                   value="duy-dep-trai"
                                   disabled />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1"
                               class="mb-10 mt-4 fs-5 fw-bold">Mô tả</label>
                        <textarea class="form-control"
                                  id="exampleFormControlTextarea1"
                                  rows="3"></textarea>
                    </div>
                    <div class="bot mt-5 w-100">
                        <button class="w-100 fw-bold"
                                style="background-color: #00d2d3; color: #fff"
                                type="submit">
                            Thêm danh mục
                        </button>
                    </div>
                </form>
            </div>
            <!-- /new-category -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->
    <!-- bottom-page -->
    <div class="bottom-page">
        <div class="body-text">Copyright © 2024 Remos. Design with</div>
        <i class="icon-heart"></i>
        <div class="body-text">
            by
            <a href="https://themeforest.net/user/themesflat/portfolio">Themesflat</a>
            All rights reserved.
        </div>
    </div>
    <!-- /bottom-page -->
</div>