@model Category
@{
    ViewData["Title"] = "Tạo Danh Mục";
}

@section Styles {
    <link rel="stylesheet" href="~/admin/css/All.css">
}

@section Scripts {
    <script src="~/admin/js/zoom.js"></script>
    <script src="~/admin/js/switcher.js"></script>
    <script src="~/admin/js/theme-settings.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Thêm danh mục mới</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html">
                            <div class="text-tiny">Quản lý</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#">
                            <div class="text-tiny">Danh mục</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Thêm danh mục</div>
                    </li>
                </ul>
            </div>
            <!-- new-category -->
            <div class="wg-box col-lg-12">
                <div asp-validation-summary="ModelOnly" class="text-danger fs-3"></div>
                <form method="post" asp-action="Create" class="col-md-12">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="mb-10 fs-5 fw-bold">Tên danh mục</label>
                            <input type="text"
                                   class="form-control mb-10"
                                   asp-for="Name"
                                   placeholder="" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="mb-10 mt-4 fs-5 fw-bold">Mô tả</label>
                        <textarea class="form-control"
                                  asp-for="Description"
                                  rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="bot mt-5 w-100">
                        <button class="w-100 fw-bold"
                                style="background-color: #00d2d3; color: #fff"
                                type="submit">
                            Thêm danh mục
                        </button>
                    </div>
                </form>
            </div>
            <!-- /new-category -->
        </div>
        <!-- /main-content-wrap -->
    </div>
    <!-- /main-content-wrap -->
    <!-- bottom-page -->
    <div class="bottom-page">
        <div class="body-text">Copyright © 2024 Remos. Design with</div>
        <i class="icon-heart"></i>
        <div class="body-text">
            by
            <a href="https://themeforest.net/user/themesflat/portfolio">Themesflat</a>
            All rights reserved.
        </div>
    </div>
    <!-- /bottom-page -->
</div>