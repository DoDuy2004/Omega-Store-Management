<!-- Xác định kiểu dữ liệu được truyền từ controller -->
@model IEnumerable<OmegaStore.Models.Category>;
<!-- Xác định kiểu dữ liệu được truyền từ controller -->
@{
    ViewData["Title"] = "Danh Sách Danh Mục";
}

@section Styles {

}

@section Scripts {
    <script src="~/admin/js/zoom.js"></script>
    <script src="~/admin/js/switcher.js"></script>
    <script src="~/admin/js/theme-settings.js"></script>
    <script>
        function confirmDelete(link) {
            if (confirm("Bạn có chắc chắn muốn xóa danh mục này không?")) {
                // Nếu người dùng chọn "OK", tiếp tục hành động xóa
                return true;
            } else {
                // Nếu người dùng chọn "Cancel", ngăn chặn hành động xóa
                return false;
            }
        }
    </script>
}

<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            @Html.Partial("_NotificationPartial")
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Quản lý danh mục</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html">
                            <div class="text-tiny">Quản lý</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#">
                            <div class="text-tiny">Danh mục</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Danh sách danh mục</div>
                    </li>
                </ul>
            </div>
            <!-- all-category -->
            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap">
                    <div class="wg-filter flex-grow">

                        <!--Số lượng hiện thị mỗi trang-->
                        @* <div class="show">
                            <div class="text-tiny">Hiển thị</div>
                            <div class="select">
                                <select class="">
                                    <option>10</option>
                                    <option>20</option>
                                    <option>30</option>
                                </select>
                            </div>

                        </div> *@
                        <!--Số lượng hiện thị mỗi trang-->
                        <!--Form tìm kiếm-->
                        <form class="form-search" asp-area="Admin" asp-controller="Category" asp-action="Search" method="post">
                            <fieldset class="name">
                                <input type="text" id="keyword" name="keyword" placeholder="Tìm kiếm">
                            </fieldset>
                            <div class="button-submit">
                                <button class="" type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>
                        <!--Form tìm kiếm-->

                    </div>

                    <!--Nút thêm danh mục mới-->
                    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="tf-button style-1 w208"
                       style="background-color: #1dd1a1; color: #fff;">
                        <i class="icon-plus"></i>Thêm danh mục
                    </a>
                    <!--Nút thêm danh mục mới-->

                </div>

                <div class="wg-table table-all-category">

                    <!---->
                    <ul class="table-title flex gap20 mb-14">
                        <li style="width: 200px;">
                            <div class="body-title">ID</div>
                        </li>
                        <li>
                            <div class="body-title">Tên danh mục</div>
                        </li>
                        <li>
                            <div class="body-title">Slug</div>
                        </li>
                        <li>
                            <div class="body-title">Mô tả</div>
                        </li>
                        <li>
                            <div class="body-title">Hành động</div>
                        </li>
                    </ul>
                    <!---->

                    <ul class="flex flex-column">
                        @foreach (var category in Model)
                        {
                            <li class="product-item gap14">
                                <div class="flex items-center justify-between gap20 flex-grow">
                                    <div class="body-text" style="width: 200px;">@category.Id</div>
                                    <div class="name">
                                        <a class="body-title-2">
                                            @category.Name
                                        </a>
                                    </div>
                                    <div class="body-text">@category.Slug</div>
                                    <div class="body-text">@category.Description</div>
                                    <div class="list-icon-function">
                                        <div class="item edit">
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-slug="@category.Slug"><i class="icon-edit-3"></i></a>
                                        </div>
                                        <div class="item">
                                            <a class="text-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-slug="@category.Slug" onclick="return confirmDelete(this);"><i class="icon-trash-2"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="divider"></div>

                <!--Phân trang-->
                @* <div class="flex items-center justify-between flex-wrap gap10">
                    <div class="text-tiny">Showing 10 entries</div>
                    <ul class="wg-pagination">
                        <li>
                            <a href="#"><i class="icon-chevron-left"></i></a>
                        </li>
                        <li>
                            <a href="#">1</a>
                        </li>
                        <li class="active">
