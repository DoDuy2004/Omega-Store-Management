<div class="main-content">
    <!-- main-content-wrap -->
    <div class="main-content-inner">
        <!-- main-content-wrap -->
        <div class="main-content-wrap">
            <div class="flex items-center flex-wrap justify-between gap20 mb-27">
                <h3>Danh sách thương hiệu</h3>
                <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                    <li>
                        <a href="index.html">
                            <div class="text-tiny">Quản lý</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <a href="#">
                            <div class="text-tiny">Thương hiệu</div>
                        </a>
                    </li>
                    <li>
                        <i class="icon-chevron-right"></i>
                    </li>
                    <li>
                        <div class="text-tiny">Danh sách</div>
                    </li>
                </ul>
            </div>
            <!-- product-list -->
            <div class="wg-box">
                <div class="flex items-center justify-between gap10 flex-wrap">
                    <div class="wg-filter flex-grow">
                        <div class="show">
                            <div class="text-tiny">Hiển thị</div>
                            <div class="select">
                                <select class="">
                                    <option>10</option>
                                    <option>20</option>
                                    <option>30</option>
                                </select>
                            </div>
                        </div>
                        <form class="form-search">
                            <fieldset class="name">
                                <input type="text" placeholder="Tìm kiếm" class="" name="name"
                                       tabindex="2" value="" aria-required="true" required="">
                            </fieldset>
                            <div class="button-submit">
                                <button class="" type="submit"><i class="icon-search"></i></button>
                            </div>
                        </form>

                    </div>
                    <a asp-area="Admin" asp-controller="Brand" asp-action="Create" class="tf-button style-1 w208" ><i class="icon-plus"></i>Thêm mới</a>
                </div>
                <div class="wg-table">
                    <ul class="table-title flex gap14 mb-40 justify-between">
                        <li style="width: 150px;">
                            <div class="body-title">Thương hiệu</div>
                        </li>
                        <li style="width: 150px;">
                            <div class="body-title">Slug</div>
                        </li>
                        <li style="width: 300px;">
                            <div class="body-title">Mô tả</div>
                        </li>
                        <li style="width: 150px;">
                            <!-- Thêm width cho cột trạng thái -->
                            <div class="body-title">Trạng thái</div>
                        </li>
                        <li style="width: 150px;">
                            <!-- Thêm width cho cột hành động -->
                            <div class="body-title">Hành động</div>
                        </li>
                    </ul>
                    <ul class="flex flex-column">
                        <li class=" flex justify-between items-center mb-40">
                            <div style="width: 150px;">
                                <a href="product-list.html" class="body-title">CupicFun</a>
                            </div>
                            <div class="body-text" style="width: 150px;">cupicfun</div> <!-- Đảm bảo width cho slug -->
                            <div class="body-text" style="width: 300px;">lorem ipsum dddddd</div> <!-- Đảm bảo width cho mô tả -->
                            <div class="body-text" style="width: 150px;">Hoạt động</div> <!-- Đảm bảo width cho trạng thái -->

                            <div class="list-icon-function" style="width: 150px;">
                                
                                <div class="item edit">
                                    <a asp-area="Admin" asp-controller="Brand" asp-action="Edit"><i class="icon-edit-3"></i></a>
                         
                                </div>
                                <div class="item trash">
                                    <i class="icon-trash-2"></i>
                                </div>
                            </div>
                        </li>
                        <li class=" flex justify-between items-center">
                            <div style="width: 150px;">
                                <a href="product-list.html" class="body-title">CupicFun</a>
                            </div>
                            <div class="body-text" style="width: 150px;">cupicfun</div> <!-- Đảm bảo width cho slug -->
                            <div class="body-text" style="width: 300px;">lorem ipsum dddddd</div> <!-- Đảm bảo width cho mô tả -->
                            <div class="body-text" style="width: 150px;">Hoạt động</div> <!-- Đảm bảo width cho trạng thái -->

                            <div class="list-icon-function" style="width: 150px;">
                                
                                <div class="item edit">
                                    <a asp-area="Admin" asp-controller="Brand" asp-action="Edit"><i class="icon-edit-3"></i></a>
                                </div>
                                <div class="item trash">
                                    <i class="icon-trash-2"></i>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="divider"></div>
                <div class="flex items-center justify-between flex-wrap gap10">
                    <div class="text-tiny">Hiển thị: 10 thương hiệu</div>
                    <ul class="wg-pagination">
                        <li>
                            <a href="#"><i class="icon-chevron-left"></i></a>
                        </li>
                        <li>
                            <a href="#">1</a>
                        </li>
                        <li class="active">
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-chevron-right"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /product-list -->
        </div>
        <!-- /main-content-wrap -->
    </div>
